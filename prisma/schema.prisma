generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(ulid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Category {
  id             String   @id @default(ulid())
  title          String
  slug           String
  count_projects Int      @default(0)
  createdAt      DateTime @default(now())

  @@index([slug], name: "category_slug_index")
  @@index([count_projects], name: "category_count_projects_index")
}
